//模拟按键

import key;
import win;

//切换到大写状态
key.capsLk()  

//输入 /*
key.press( "/" );
key.combine("SHIFT","8")

// 依次按下A,B,C,D四个键//ABCD
key.press( "A","B","C","D");  
sleep(1000);

//切换到小写状态
key.capsLk(false)  //ABCD

 //按下A键,也可以仅指定一个键名
key.press("A");               
sleep(1000);

//同时按下组合键Ctrl  + Alt + A
key.combine("CTRL","ALT","A");  
sleep(2000);

//按下ESC键,退出截屏状态,参数也可以是_VK_前缀的虚拟键码
key.press(0x1B/*_VK_ESCAPE*/ );        

//按下CTRL + Z
key.combine(0x11/*_VK_CONTROL*/,"Z"); 

//输入 */
key.combine("SHIFT","8")
key.press( "/" ); 