				ret = ( thread.shareHandle.delete( shareName,zmq_ctx_term ) == 0 )
			}
			else{
				ret = ( zmq_ctx_term( this.handle ) == 0 )  
			}
			this.handle = null;
			return ret;
		}
	}
}
